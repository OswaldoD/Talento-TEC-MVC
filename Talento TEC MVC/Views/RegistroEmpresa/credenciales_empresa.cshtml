@model Talento_TEC_MVC.Models.registro.empresa.credenciales_empresa


@{
    ViewBag.Title = "Credenciales inicio de sesión";
}

<div class="progress">
    <div class="progress-bar progress-bar-success" role="progressbar" style="width: 20%">
        Paso 1: Elección de cuenta
    </div>
    <div class="progress-bar progress-bar-success" role="progressbar" style="width: 20%">
        Paso 2: Información inicial
    </div>
    <div class="progress-bar progress-bar-success" role="progressbar" style="width: 20%">
        Paso 3: Descripción empresa
    </div>
    <div class="progress-bar progress-bar-danger" role="progressbar" style="width: 20%">
        Paso 4: Inicio de sesión
    </div>
    <div class="progress-bar progress-bar-info" role="progressbar" style="width: 20%">
        Paso 5: Finalizar
    </div>
</div>
<!-- Texto de Bienvenida -->
<h1>Registro de Empresa</h1>
<h3>Inicio de sesión</h3>
<br />
<p>Ingrese o modifique los datos de referencia de su empresa para poder iniciar sesión en Talento TEC</p>
<p>Los campos con un asterisco (*) denotan que son campos obligatorios de ingresar.</p>

<li role="presentation" class="divider-line"></li>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">

        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.nombreUsuario, htmlAttributes: new { @class = "control-label col-xs-6 col-md-4" })
            <div class="col-xs-6 col-md-4">
                @Html.EditorFor(model => model.nombreUsuario, new { htmlAttributes = new { @class = "form-control", @placeholder = "Nombre de usuario significativo a la empresa", @required = "required" } })
                @Html.ValidationMessageFor(model => model.nombreUsuario, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.contrasenna, htmlAttributes: new { @class = "control-label col-xs-6 col-md-4" })
            <div class="col-xs-6 col-md-4">
                @Html.EditorFor(model => model.contrasenna, new { htmlAttributes = new { @class = "form-control", @placeholder="Digite la contraseña", @required="required" } })
                @Html.ValidationMessageFor(model => model.contrasenna, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.comprobarContrasenna, htmlAttributes: new { @class = "control-label col-xs-6 col-md-4" })
            <div class="col-xs-6 col-md-4">
                @Html.EditorFor(model => model.comprobarContrasenna, new { htmlAttributes = new { @class = "form-control", @placeholder="Digite de nuevo la contraseña", @required = "required" } })
                @Html.ValidationMessageFor(model => model.comprobarContrasenna, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-5 col-md-10">
                <input type="submit" value="Siguiente" class="btn btn-primary" />
            </div>
        </div>
    </div>
}

